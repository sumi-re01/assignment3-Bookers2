<!--user/:id/show-->
<div class="container px-5 px-sm-0">
<!--erroe messages-->

  <div class="row">
    <!--User info, New book-->
    <div class="col-md-3">

      <%= render partial: 'users/user', locals: {user: @user, book: @book} %>

    </div>

    <!--Books一覧-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <!--あとで各linkの追加-->
            <td><%= attachment_image_tag @user, :profile_image, size: "40x40", fallback: "no_image.jpg" %></td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>