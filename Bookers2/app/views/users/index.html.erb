<!--Users index-->
<div class="container px-5 px-sm-0">
  <div class="row">
    <!--User info, New book-->
    <div class="col-md-3">

      <!--バリデーションエラーメッセージ-->

      <!--User info-->
      <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image %>
        <table>
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <%= link_to edit_user_registration_path(@user.id) do %>
         edit
        <% end %>
      <!--New Book-->
      <h2>New book</h2>
      <%= form_with model:@book, local:true do |f| %>
        <div class="field">
          <%= f.label :title %>
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.label :body %>
          <%= f.text_area :body %>
        </div>
        <div class="btn">
          <%= f.submit "Create Book" %>
        </div>
      <% end %>
    </div>

    <!--Users一覧-->
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <!--あとで各linkの追加-->
            <td><%= attachment_image_tag @user, :profile_image, size: "30x30", fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td>
              <%= link_to "Show", book_path(user.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>