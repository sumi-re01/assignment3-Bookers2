<!--Books index-->
<div class="container px-5 px-sm-0">
  <div class="row">
    <!--User info, New book-->
    <div class="col-md-3">

      <!--バリデーションエラーメッセージ-->


      <!--User info-->
      <h2>User info</h2>
      <%= render partial: 'users/user_info', locals: {user_info: @user} %>

      <!--New Book-->
      <h2>New book</h2>
      <%= form_with model:@book, local:true do |f| %>
        <div class="field">
          <%= f.label :title %>
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.label :body %>
          <%= f.text_area :body %>
        </div>
        <div class="btn">
          <%= f.submit "Create Book" %>
        </div>
      <% end %>
    </div>

    <!--Books一覧-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @books.each do |book| %>
        <tbody>
          <tr>
            <!--あとで各linkの追加-->
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= attachment_image_tag book.user, :profile_image, size: "40x40", fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>