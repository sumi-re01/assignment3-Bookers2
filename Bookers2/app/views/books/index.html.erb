<!--Books index-->
<div class="container px-5 px-sm-0">
  <div class="row">
    <!--User info, New book-->
    <div class="col-md-3">

      <!--バリデーションエラーメッセージ-->


      <!--User info-->

      <!--New Book-->
      <h2>New book</h2>
      <%= form_with model:@book, local:true do |f| %>
        <div class="field">
          <%= f.label :title %>
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.label :body %>
          <%= f.text_area :body %>
        </div>
        <div class="btn">
          <%= f.submit "Create Book" %>
        </div>
      <% end %>
    </div>

    <!--Books一覧-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <% @books.each do |book| %>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <!--あとで各linkの追加-->
            <td><%= book.user.name %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td>Edit</td>
            <td>Destroy</td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>