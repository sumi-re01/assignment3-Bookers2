<!--Books show-->
<div class="container px-5 px-sm-0">
  <div class="row">
    <!--User info, New book-->
    <div class="col-md-3">

      <!--バリデーションエラーメッセージ-->


      <!--User info-->
      <h2>User info</h2>
      <%= render partial: 'users/user_info', locals: {user_info: @user} %>


      <!--New Book-->
      <h2>New book</h2>
      <%= render partial: 'books/new_book'

    <!--Books一覧-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= attachment_image_tag @book.user, :profile_image, size: "40x40", fallback: "no_image.jpg" %><br />
                <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>