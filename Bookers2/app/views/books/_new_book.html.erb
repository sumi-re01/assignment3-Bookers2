<h2>New book</h2>
<%= form_with model: new_book, local:true do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div class="btn">
    <%= f.submit "Create Book" %>
  </div>
<% end %>